<div class="row" style="margin-top: 50px;">
  <div class="span4">
    <div class="thumbnail">
      <img src="<%= current_user.profile_image_url %>" style="float: left;margin: 5px;">
      <h3><%= current_user.name %></h3>
      <h4><%= current_user.location %></h4>
      <br>
      <p><%= current_user.description %></p>
    </div>
  </div>
</div>
  <div class="span2" style="width:235px;float:right">
     <%= form_tag(tweets_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :q, params[:q], class: "span2", placeholder: "Search Tweets" %>
      <%= submit_tag "Search", class: "btn btn-success", :place => nil %>
    </div>
  <% end %>
  </div>

