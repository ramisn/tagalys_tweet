  <div class="span8" style="float:right">
  <h1>Search Tweets</h1>
    <table class="table table-striped">
      <tr>
        <th>User Name</th>
        <th>Profile Image</th>
        <th>Tweet</th>
        <th>RT_Count</th>
      </tr>
      <% if params[:q] %>
      <% @search.each do |t| %>
       <tr>
         <th><%= t.user.screen_name %></th>
         <th><img src="<%= t.user.profile_image_url %>" /></th>
         <th><%= t.text %></th>
         <th><%= t.retweet_count %></th>
       </tr>
      <% end %>
      <% else %>
      <% @search.each do |t| %>
       <tr>
         <th><%= t.user_name %></th>
         <th><img src="<%#= t.profile_img %>"></th>
         <th><%= t.tweet %></th>
         <th><%= t.rt_count %></th>
       </tr>
      <% end %>
      <% end %>
  </table>
  </div>
  <div class="span8" style="float:right">
  <h1>Home Timeline</h1>
    <table class="table table-striped">
      <tr>
        <th>User Name</th>
        <th>Profile Image</th>
        <th>Tweet</th>
        <th>RT_Count</th>
      </tr>
      <% @home_timeline.each do |t| %>
       <tr>
         <th><%= t.user.name %></th>
         <th><img src="<%= t.user.profile_image_url %>" /></th>
         <th><%= t.text %></th>
         <th><%= t.retweet_count %></th>
       </tr>
      <% end %>
  </table>
  </div>
